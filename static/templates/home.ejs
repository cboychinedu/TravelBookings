<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Home </title>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link rel="stylesheet" href="../css/home.css">
</head>
<body>
    <section class="mainSection"> 
        <section class="leftLoginSection"> 
            <div class="logoDiv">
                <img src="../img/flightLogo.png" class="flightLogo" /> 
                <h2 class="flightAnalysisHeader"> Travel Booking Platform </h2>
            </div>

            <!-- Adding the alert div -->
            <div class="alertDiv"> 

            </div>

            <!-- Adding the form div -->
        <div class="loginFormDiv"> 
            <div class="inputLoginFormDiv"> 
                <h2 class="loginHeader"> LOGIN </h2>
            </div>
            <div class="inputLoginFormDiv">
                <label> Email </label> <br> 
                <input type="email" id="email" placeholder="Enter your email" class="inputForm" required/> 
            </div>
            <div class="inputLoginFormDiv">
                <label> Password </label> <br> 
                <input type="password" id="password" placeholder="Enter your password" class="inputForm" required/> 
            </div>
            <div class="remembermeDiv">
                <section class="loginCheckboxDiv">
                    <input type="checkbox" />
                    <p> Remember me </p>
                </section> 

                <section>
                    <a> Forgot Password </a>
                </section>

            </div>
            <div> 
                <button class="loginBtn" id="loginBtn"> Login </button>
            </div>
            <div>
                <button class="signupBtn" id="signupBtn"> Sign Up </button>
            </div>

        </div>
            


        </section>

        <section class="rightLoginSection">
            <div class="innerLoginImage">
                <img src="../img/airplaneLogo.jpg" class="airplaneLogo" /> 
            </div> 

        </section>
    </section>
    
    <!-- Adding javascript -->
    <script src="../js/home.js"></script>
</body>
</html>